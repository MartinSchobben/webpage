atitudes may be in part explained by a much wider paleolatitudinal distribution of sites than previously assumed.},
author = {van Hinsbergen, Douwe J J and de Groot, Lennart V and van Schaik, Sebastiaan J and Spakman, Wim and Bijl, Peter K and Sluijs, Appy and Langereis, Cor G and Brinkhuis, Henk},
doi = {10.1371/journal.pone.0126946},
file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/van Hinsbergen et al. - 2015 - A Paleolatitude Calculator for Paleoclimate Studies.pdf:pdf},
issn = {1932-6203},
journal = {PloS one},
number = {6},
pages = {e0126946},
pmid = {26061262},
title = {{A Paleolatitude Calculator for Paleoclimate Studies.}},
url = {http://journals.plos.org/plosone/article?id=10.1371/journal.pone.0126946},
volume = {10},
year = {2015}
}
