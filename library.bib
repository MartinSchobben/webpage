issn = {09670645},
journal = {Deep-Sea Research Part II: Topical Studies in Oceanography},
keywords = {Barite,Biological production,Carbon cycle,Marine sediments,Palaeoceanography,Primary production},
number = {5-7},
pages = {687--705},
title = {{Marine barite: Recorder of variations in ocean export productivity}},
volume = {54},
year = {2007}
}
@misc{Lyons1997,
