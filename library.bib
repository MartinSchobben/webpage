journal = {Palaios},
number = {2},
pages = {138--152},
title = {{Permian-Triassic Boundary Sections from Shallow-Marine Carbonate Platforms of the Nanpanjiang Basin, South China: Implications for Oceanic Conditions Associated with the End-Permian Extinction and Its Aftermath}},
