issn = {0028-0836},
journal = {Nature},
number = {7621},
pages = {1--12},
pmid = {27580034},
publisher = {Nature Publishing Group},
title = {{Rapid emergence of life shown by discovery of 3,700-million-year-old microbial structures}},
