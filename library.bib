file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Osen et al. - 2012 - Sensitivity of Late Permian climate to bathymetric features and implications for the mass extinction.pdf:pdf;:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Osen et al. - 2012 - Sensitivity of Late Permian climate to bathymetric features and implications for the mass extinction(2).pdf:pdf},
