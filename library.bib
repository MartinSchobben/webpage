file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Meister et al. - 2007 - Dolomite formation in the dynamic deep biosphere Results from the Peru Margin.pdf:pdf},
isbn = {0037-0746$\backslash$rISI:000249664200002},
