file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Arndt et al. - 2013 - Quantifying the degradation of organic matter in marine sediments A review and synthesis.pdf:pdf},
isbn = {0012-8252},
issn = {00128252},
journal = {Earth-Science Reviews},
keywords = {Diagenesis,Marine sediments,Organic matter degradation,Reaction-transport modeling},
pages = {53--86},
publisher = {Elsevier B.V.},
title = {{Quantifying the degradation of organic matter in marine sediments: A review and synthesis}},
