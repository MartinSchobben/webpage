doi = {10.1016/j.gca.2007.06.033},
file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Wortmann et al. - 2007 - Oxygen isotope biogeochemistry of pore water sulfate in the deep biosphere Dominance of isotope exchange reacti.pdf:pdf},
isbn = {0016-7037},
issn = {00167037},
journal = {Geochimica et Cosmochimica Acta},
number = {17},
pages = {4221--4232},
title = {{Oxygen isotope biogeochemistry of pore water sulfate in the deep biosphere: Dominance of isotope exchange reactions with ambient water during microbial sulfate reduction (ODP Site 1130)}},
