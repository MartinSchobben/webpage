file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Schunck et al. - 2013 - Giant Hydrogen Sulfide Plume in the Oxygen Minimum Zone off Peru Supports Chemolithoautotrophy.pdf:pdf},
isbn = {1932-6203},
