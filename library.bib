file = {:home/amandus/Downloads/1-s2.0-S0012821X14001617-main.pdf:pdf},
isbn = {0012-821X},
issn = {0012821X},
journal = {Earth and Planetary Science Letters},
keywords = {Carbon isotope excursion,Isotope geochemistry,PETM,Paleoceanography,Paleoclimatology},
pages = {70--81},
publisher = {Elsevier B.V.},
