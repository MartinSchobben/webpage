file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Turchyn et al. - 2015 - Microbial sulfur metabolism evidenced from pore fluid isotope geochemistry at Site U1385.pdf:pdf},
issn = {09218181},
journal = {Global and Planetary Change},
keywords = {Microbial sulfate reduction,Oxygen isotope,Pyrite,Sulfur isotope},
pages = {82--90},
publisher = {Elsevier B.V.},
title = {{Microbial sulfur metabolism evidenced from pore fluid isotope geochemistry at Site U1385}},
