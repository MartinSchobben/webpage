file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Mossmann et al. - 1991 - Geochemistry of inorganic and organic sulphur in organic-rich sediments from the Peru Margin.pdf:pdf},
isbn = {0016-7037},
