number = {(Suppl. 1)},
pages = {179--214},
title = {{Microbial carbonates : the geological record of calcified bacterial-algal mats and biofilms}},
url = {http://onlinelibrary.wiley.com/doi/10.1046/j.1365-3091.2000.00003.x/full},
volume = {47},
