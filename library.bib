file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Antler et al. - 2013 - Coupled sulfur and oxygen isotope insight into bacterial sulfate reduction in the natural environment.pdf:pdf},
isbn = {0016-7037},
issn = {00167037},
journal = {Geochimica et Cosmochimica Acta},
pages = {98--117},
publisher = {Elsevier Ltd},
title = {{Coupled sulfur and oxygen isotope insight into bacterial sulfate reduction in the natural environment}},
