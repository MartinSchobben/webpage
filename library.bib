file = {:home/amandus/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Soetaert, Herman, Middelburg - 1996 - A model of early diagenetic processes from the shelf to abyssal depths.pdf:pdf},
isbn = {0016-7037},
issn = {00167037},
journal = {Geochimica et Cosmochimica Acta},
