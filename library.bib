keywords = {Biogeochemical,Carbonate,Fe-speciation,Proxy,Redox},
pages = {111--122},
publisher = {Elsevier B.V.},
title = {{Assessing the utility of Fe/Al and Fe-speciation to record water column redox conditions in carbonate-rich sediments}},
url = {http://dx.doi.org/10.1016/j.chemgeo.2014.05.031},
volume = {382},
year = {2014}
}
@article{Xie2007,
