institution = {Department of Earth and Planetary Science, University of California, Berkeley 94720-4767, USA. platetec@Socrates.Berkeley.edu},
journal = {Astrobiology},
number = {1},
pages = {153--161},
title = {{Comparing the evidence relevant to impact and flood basalt at times of major mass extinctions.}},
