journal = {Astrobiology},
keywords = {589,603,astrobiology 10,interpretation,laboratory investigations,mars,of planetary mission data,organic degradation,search for mars organics},
number = {6},
pages = {589--603},
pmid = {20735250},
title = {{Organics on Mars?}},
volume = {10},
year = {2010}
