journal = {Deep Sea Research Part A. Oceanographic Research Papers},
pages = {S1151--S1187},
publisher = {Pergamon Press plc},
title = {{Sulfur, iron and organic carbon fluxes in the Black Sea: sulfur isotopic evidence for origin of sulfur fluxes}},
url = {http://dx.doi.org/10.1016/S0198-0149(10)80029-9},
volume = {38},
