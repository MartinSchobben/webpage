isbn = {0883-1351},
issn = {0883-1351},
journal = {Palaios},
month = {jun},
number = {6},
pages = {356--369},
title = {{Geobiological Aspects of the Earliest Triassic Microbialites Along the Southern Periphery of the Tropical Yangtze Platform: Initiation and Cessation of a Microbial Regime}},
